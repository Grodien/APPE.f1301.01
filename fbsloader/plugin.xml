<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="Application1"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="ch.hslu.appe.fs1303.loader.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="ch.hslu.appe.fs1303.gui.perspectives.APPEPerspective"
            id="ch.hslu.appe.fs1303.gui.perspectives.APPEPerspective"
            name="RCP Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="ch.hslu.appe.fs1303.gui.presenter.PersonSearchPresenter"
            id="ch.hslu.appe.fs1303.gui.presenter.PersonSearchPresenter"
            name="PersonSearchPresenter"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
</plugin>
