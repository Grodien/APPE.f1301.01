<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="APPE RCP Application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="ch.hslu.appe.fs1303.loader.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="ch.hslu.appe.fs1303.gui.perspectives.APPEPerspective"
            id="ch.hslu.appe.fs1303.gui.perspectives.APPEPerspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="ch.hslu.appe.fs1303.gui.presenter.PersonSearchPresenter"
            id="ch.hslu.appe.fs1303.gui.presenter.PersonSearchPresenter"
            name="PersonSearchPresenter"
            restorable="true">
      </view>
   </extension>

</plugin>
